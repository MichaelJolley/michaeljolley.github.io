---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ site.url }}</loc>
        <lastmod>{{ site.time | date_to_rfc822 }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ site.url }}/about/</loc>
        <lastmod>{{ site.time | date_to_rfc822 }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    <url>
        <loc>{{ site.url }}/talks/</loc>
        <lastmod>{{ site.time | date_to_rfc822 }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>
    {% for post in site.posts limit:20 %}
    <url>
        <loc>{{ post.url | prepend: site.baseurl | prepend: site.url }}</loc>
        <lastmod>{{ post.date | date_to_rfc822 }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.8</priority>
    </url>
    {% endfor %}
    {% for stream in site.streams limit:40 %}
    <url>
        <loc>{{ stream.url | prepend: site.baseurl | prepend: site.url }}</loc>
        <lastmod>{{ stream.date | date_to_rfc822 }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
    </url>
    {% endfor %}
</urlset> 